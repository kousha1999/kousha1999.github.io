# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8

[*.{js,jsx,ts,tsx,css,html}]
indent_size = 2

[*.yml,*.yaml,*.json,*.toml]
indent_size = 2
